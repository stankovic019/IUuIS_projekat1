<Page x:Class="Retro_Gaming_Konzole.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Retro_Gaming_Konzole.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="LoginPage"
        >

    <Border Padding="10">

        <Grid Margin="0 150 10 150">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0" Grid.Column="0"
                Text="USERNAME: "
                Foreground="#222625"
                FontSize="16"
                FontWeight="DemiBold"
                VerticalAlignment="Center"
                />

            <TextBox
                Grid.Row="0" Grid.Column="1"
                FontSize="16"
                VerticalAlignment="Center"
                x:Name="usernameTextBox"
                ToolTip="Enter your username"
                />

            <TextBlock 
                Grid.Row="2" Grid.Column="0"
                Text="PASSWORD: "
                Foreground="#222625"
                FontSize="16"
                FontWeight="DemiBold"
                VerticalAlignment="Center"
                />

            <Grid Grid.Row="2" Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <PasswordBox
                    Grid.Column="0"
                    FontSize="16"
                    VerticalAlignment="Center"
                    x:Name="passwordBox"
                    Visibility="Visible"
                    ToolTip="Enter your password"
                />
                <TextBox
                    Grid.Column="0"
                    FontSize="16"
                    VerticalAlignment="Center"
                    x:Name="passwordTextBox"
                    IsReadOnly="True"
                    Visibility="Hidden"
                    ToolTip="You can't edit your password if you can see it."
                />

                <Button 
                    Margin="5 0 0 0"
                    Grid.Column="1"
                    Content="👁"
                    VerticalAlignment="Center"
                    x:Name="seePasswordButton" Click="seePasswordButton_Click"
                    ToolTip="Show/Hide Password"
                    />

            </Grid>

        </Grid>
        
        
    </Border>
</Page>
