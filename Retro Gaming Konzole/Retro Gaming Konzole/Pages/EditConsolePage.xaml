<Page x:Class="Retro_Gaming_Konzole.Pages.EditConsolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Retro_Gaming_Konzole.Pages"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="EditConsolePage">

    <Grid>
        <Border Padding="10">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                 Grid.Column="0"
                 Text="Name:"
                 Foreground="#222625"
                 FontSize="16"
                 FontWeight="DemiBold"
                 VerticalAlignment="Center"/>

                    <TextBox
                 Grid.Column="1"
                 FontSize="16"
                 VerticalAlignment="Center"
                 x:Name="consoleNameTextBox"
                 ToolTip="Enter name of the console."/>
                </Grid>

                <Grid Grid.Row="1" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.6*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                 Grid.Column="0"
                 Text="Console Release Year:"
                 Foreground="#222625"
                 FontSize="16"
                 FontWeight="DemiBold"
                 VerticalAlignment="Center"/>

                    <TextBox
                 Grid.Column="1"
                 FontSize="16"
                 VerticalAlignment="Center"
                 x:Name="consoleReleaseYearTextBox"
                 ToolTip="Enter the release year of the console"/>
                </Grid>

                <Grid Grid.Row="2">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2.8*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                  Grid.Column="0"
                  Text="Image Path:"
                  Foreground="#222625"
                  FontSize="16"
                  FontWeight="DemiBold"
                  VerticalAlignment="Center"/>

                    <TextBox
                 Grid.Column="1"
                 FontSize="16"
                 VerticalAlignment="Center"
                 IsReadOnly="True"
                 x:Name="consoleImgPathTextBox" MouseDoubleClick="consoleImgPathTextBox_MouseDoubleClick" TextChanged="consoleImgPathTextBox_TextChanged"
                 ToolTip="Double-click this or click the 'import' button to import the image"
                 />

                    <Image 
                 Grid.Column="2"
                 Margin="5 0"   
                 Height="55"
                 x:Name="previewImage"
                 ToolTip="Imported image"
                Stretch="Uniform"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="3">
                    <DockPanel>
                        <ToolBar 
                     Name="EditorToolBar" 
                     DockPanel.Dock="Top">

                            <ComboBox
                         Name="FontFamilyComboBox"
                         Width="170"
                         ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                         IsTextSearchCaseSensitive="False"
                         IsTextSearchEnabled="True" SelectionChanged="FontFamilyComboBox_SelectionChanged"
                         ToolTip="Select font">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                     FontFamily="{Binding}"
                                     Text="{Binding}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ComboBox
                         Name="FontSizeComboBox"
                         Width="40"
                         Margin="5 0"
                         SelectionChanged="FontSizeComboBox_SelectionChanged"
                         ToolTip="Select font size">
                                <ComboBoxItem Content="8" />
                                <ComboBoxItem Content="10" />
                                <ComboBoxItem Content="12" />
                                <ComboBoxItem Content="14" />
                                <ComboBoxItem Content="16" />
                                <ComboBoxItem Content="18" />
                                <ComboBoxItem Content="24" />
                                <ComboBoxItem Content="36" />
                                <ComboBoxItem Content="48" />
                                <ComboBoxItem Content="72" />
                            </ComboBox>

                            <Separator />

                            <ToggleButton
                         Name="BoldToggleButton"
                         Command="EditingCommands.ToggleBold"
                         ToolTip="Bold">
                                <fa5:SvgAwesome
                             Height="15"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Foreground="Black"
                             Icon="Solid_Bold" />
                            </ToggleButton>

                            <ToggleButton
                         Name="ItalicToggleButton"
                         Command="EditingCommands.ToggleItalic"
                         ToolTip="Italic">
                                <fa5:SvgAwesome
                             Height="15"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Foreground="Black"
                             Icon="Solid_Italic" />
                            </ToggleButton>

                            <ToggleButton
                         Name="UnderlineToggleButton"
                         Command="EditingCommands.ToggleUnderline"
                         ToolTip="Underline">
                                <fa5:SvgAwesome
                             Height="15"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Foreground="Black"
                             Icon="Solid_Underline" />
                            </ToggleButton>

                            <Separator />

                            <ComboBox
                             Name="FontColorComboBox"
                             Width="120"
                             SelectionChanged="FontColorComboBox_SelectionChanged"
                             ToolTip="Select text color">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="16" Height="16" Fill="{Binding}" Stroke="Black" Margin="0 0 5 0"/>
                                            <TextBlock Text="{Binding}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                        </ToolBar>

                        <StatusBar DockPanel.Dock="Bottom">
                            <StatusBarItem>
                                <TextBlock x:Name="WordCountTextBlock" Text="Words: 0" 
                                    ToolTip="Word Count in Rich Text Box"/>
                            </StatusBarItem>
                        </StatusBar>

                        <RichTextBox
                     Name="EditorRichTextBox"
                     Height="200"
                     Margin="0 10 0 10"
                     SelectionChanged="EditorRichTextBox_SelectionChanged" 
                     TextChanged="EditorRichTextBox_TextChanged" />


                    </DockPanel>
                </Grid>


            </Grid>

        </Border>
    </Grid>
</Page>
