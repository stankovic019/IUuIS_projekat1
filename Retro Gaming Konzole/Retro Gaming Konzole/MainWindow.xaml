<Window x:Class="Retro_Gaming_Konzole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retro_Gaming_Konzole"
        xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Title="MainWindow" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing" Loaded="Window_Loaded">
  
    <Grid 
        Height="650" 
        Width="450">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas 
            Width="450" 
            Height="650"
            IsHitTestVisible="False">
            <Canvas.Resources>
                <DropShadowEffect
                x:Key="MouseOverDropShadowEffect"
                Direction="320"
                Opacity="80"
                ShadowDepth="10"
                Color="PeachPuff" />
            </Canvas.Resources>
        <Path
                Name="UIPath"
                Fill="#d6d6d6"
                Stroke="Black"
                StrokeThickness="3"
            >
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <LineSegment Point="0,650" />
                            <LineSegment Point="350,650" />
                            <ArcSegment Point="450,550"
                            Size="100,100"
                            SweepDirection="Counterclockwise"
                            RotationAngle="180"
                            IsLargeArc="False" />
                            <LineSegment Point="450,0" />
                            <LineSegment Point="0,0" />
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>
       
        <notifications:NotificationArea
                    x:Name="WindowNotificationArea"
                    Width="450"
                    Panel.ZIndex="1000"
                    MaxItems="5"
                    Position="TopRight"/>


        <DockPanel LastChildFill="True" Grid.Row="0">
                    
                    <Frame 
                        x:Name="MainFrame"
                        DockPanel.Dock="Top"
                        NavigationUIVisibility="Hidden"
                        VerticalAlignment="Center"
                    />
       
        </DockPanel>


        <Grid Grid.Row="1" Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
        <TextBlock 
            Grid.Row="0"
            Text="IUuIS RETRO GAME CONSOLES CMS"
            Foreground="#32397d"
            FontWeight="DemiBold"
            FontSize="16"
            
            />

            <Grid Grid.Row="1">
                
         
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- joystick -->
            <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        
                    
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Background="#222625"
                    Foreground="#848484"
                    x:Name="leftGameBoyButton"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="◄" />
                <Button
                    Background="#222625"
                    Foreground="#848484"
                    x:Name="upGameBoyButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Content="▲" />
                <Button
                    Background="#222625"
                    Foreground="#848484"
                    x:Name="rightGameBoyButton"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="►" />
                <Button
                    Background="#222625"
                    Foreground="#848484"
                    x:Name="downGameBoyButton"
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="▼" />
                <Button
                    Background="#222625"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="" />      
                </Grid>
            </Grid>

            <!-- Start/Select -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" >
                <Button
                    Background="#8a8e91"
                    Foreground="WhiteSmoke"
                    Content="Log in"
                    Width="120" Margin="20 20 30 0 "
                    Click="startButton_Click"
                    x:Name="startButton"
                    ToolTip="Log into application"/>
                <Button
                    Background="#8a8e91"
                    Foreground="WhiteSmoke"
                    Content="Exit"
                    Width="120"
                    Margin="50 5 0 0"
                    Click="exitButton_Click"
                    x:Name="exitButton"
                    ToolTip="Exit application"/>
            </StackPanel>

            <!-- A/B dugmad -->
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    Background="#902664"
                    Foreground="WhiteSmoke"
                    x:Name="aGameBoyButton"
                    Content="A"
                    Width="50"
                    Height="50"
                    Margin="20 0 0 5" Click="aGameBoyButton_Click" 
                    ToolTip="Clear all text from username and password boxes"/>
                <Button
                    Background="#902664"
                    Foreground="WhiteSmoke"
                    x:Name="bGameBoyButton"
                    Content="B"
                    Width="50"
                    Height="50"
                    Margin="0 5 20 0" Click="bGameBoyButton_Click" 
                    ToolTip="About Application"/>
            </StackPanel>
            </Grid>
        </Grid>
    </Grid>
       
</Window>
